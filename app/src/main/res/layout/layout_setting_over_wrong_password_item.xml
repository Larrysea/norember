<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_layout_setting_over_wrong_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_generate_ripple_btn"
    android:orientation="horizontal"
    android:padding="16dp">

    <android.support.v7.widget.SwitchCompat
        android:id="@+id/id_layout_setting_over_wrong_password_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/id_layout_setting_auto_login_item_title_tv" />

    <TextView
        android:id="@+id/id_layout_setting_auto_login_item_title_tv"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:text="@string/protect_password"
        android:textColor="@color/black"
        android:textSize="18sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_below="@+id/id_layout_setting_auto_login_item_title_tv"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:text="@string/over_wrong_password_tip" />

</RelativeLayout>