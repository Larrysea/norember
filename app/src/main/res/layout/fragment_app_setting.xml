<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/id_fragment_app_setting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                layout="@layout/layout_setting_item_sync"
                android:visibility="gone" />

            <include layout="@layout/layout_setting_auto_fill_item" />

            <include layout="@layout/layout_setting_open_finger_print" />

            <include
                layout="@layout/layout_setting_reset_password_item"
                android:visibility="gone" />

            <include
                layout="@layout/layout_bind_device_item"
                android:visibility="gone" />

            <!--<include layout="@layout/layout_setting_forbiden_screenshot" />-->

            <!--<include layout="@layout/layout_setting_over_wrong_password_item" />-->

            <include layout="@layout/layout_setting_comment_item" />

            <include
                layout="@layout/layout_setting_help_item"
                android:visibility="gone" />

            <include layout="@layout/layout_setting_contact_us_item" />

            <include layout="@layout/layout_setting_version_item" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>