<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/id_activity_choose_storage_type_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_style_color"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ActionMenuWhiteTitle"></android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/id_activity_choose_storage_type_container"
        android:layout_width="match_parent"

        android:layout_height="match_parent" />


</LinearLayout>