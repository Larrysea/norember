<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/id_activity_safe_note_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/default_style_color"
        android:elevation="4dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ActionMenuWhiteTitle" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/activity_safe_note_title_ti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp">
        <EditText
            android:id="@+id/id_activity_safe_note_title_et"
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@null"
            android:enabled="false"
            android:gravity="left"
            android:hint="@string/title"
            android:paddingTop="16dp" />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/activity_safe_note_content_ti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp">
        <EditText
            android:id="@+id/id_activity_safe_note_content_et"
            style="@style/AppTheme"
            android:layout_width="match_parent"
            android:layout_height="372dp"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:background="@null"
            android:enabled="false"
            android:gravity="left|top"
            android:hint="@string/content"
            android:paddingTop="16dp" />
    </android.support.design.widget.TextInputLayout>
    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>